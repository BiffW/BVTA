<?xml version="1.0" encoding="utf-8"?>
<Override>
  <!--霰弹-->
  <Item identifier="flakbolt">
    <inherit identifier="flakbolt">
      <doinherit />
      <replace sel="./Projectile/StatusEffect[@type='OnBroken']/SpawnItem/@aimspread">60</replace>
    </inherit>
  </Item>
  <!--霰弹弹药箱-->
  <Item identifier="flakcannonammobox">
    <inherit identifier="flakcannonammobox">
      <doinherit />
      <replace sel="./Price/@baseprice">100</replace>
    </inherit>
  </Item>
  <!--集束弹-->
  <Item identifier="flakboltdirectional">
    <inherit identifier="flakboltdirectional">
      <doinherit />
      <replace sel="./Projectile/StatusEffect[@type='OnBroken']/SpawnItem/@count">16</replace>
    </inherit>
  </Item>
  <!--集束弹药箱-->
  <Item identifier="flakcannondirectionalammobox">
    <inherit identifier="flakcannondirectionalammobox">
      <doinherit />
      <add sel="./Price/@minavailable">1</add>
      <del sel="./Price/Price" />
      <add sel="./Price">
        <Price storeidentifier="merchantoutpost" multiplier="1.3" />
        <Price storeidentifier="merchantcity" multiplier="1.2" minavailable="1" sold="false" />
        <Price storeidentifier="merchantresearch" multiplier="1.3" />
        <Price storeidentifier="merchantmilitary" multiplier="0.9" minavailable="8" minleveldifficulty="10" />
        <Price storeidentifier="merchantmine" multiplier="1" minavailable="5" />
        <Price storeidentifier="merchantarmory" multiplier="0.9" minavailable="8" minleveldifficulty="10" />
      </add>
      <del sel="./Deconstruct/Item" />
      <add sel="./Deconstruct">
        <Item identifier="lead" mincondition="0.95" />
        <Item identifier="lead" mincondition="0.45" />
        <Item identifier="aluminium" />
      </add>
    </inherit>
  </Item>
  <!--刚素弹药箱-->
  <Item identifier="flakcannonammoboxphysicorium">
    <inherit identifier="flakcannonammoboxphysicorium">
      <doinherit />
      <replace sel="./Price/@baseprice">300</replace>
      <del sel="./Price/@sold" />
      <add sel="./Price/@minleveldifficulty">35</add>
      <del sel="./Price/Price" />
      <add sel="./Price">
        <Price storeidentifier="merchantoutpost" multiplier="1.3" sold="false" />
        <Price storeidentifier="merchantcity" multiplier="1.2" sold="false" />
        <Price storeidentifier="merchantresearch" multiplier="1.3" sold="false" />
        <Price storeidentifier="merchantmilitary" multiplier="0.9" minavailable="6" minleveldifficulty="35" />
        <Price storeidentifier="merchantmine" multiplier="1.0" minavailable="4" />
        <Price storeidentifier="merchantarmory" multiplier="0.9" minavailable="6" minleveldifficulty="35" />
      </add>
    </inherit>
  </Item>
  <!-- 爆破弹 -->
  <Item identifier="flakboltexplosive">
    <inherit identifier="flakboltexplosive">
      <doinherit />
      <replace sel="./Projectile/StatusEffect[@type='OnBroken']/SpawnItem/@count">16</replace>
      <replace sel="./Projectile/StatusEffect[@type='OnBroken']/SpawnItem/@aimspread">90</replace>
    </inherit>
  </Item>
  <!-- 爆破弹破片 -->
  <Item identifier="flakshrapnelexplosive">
    <inherit identifier="flakshrapnelexplosive">
      <doinherit />
      <replace sel="./Projectile/StatusEffect/Explosion/@structuredamage">25</replace>
      <replace sel="./Projectile/StatusEffect/Explosion/@severlimbsprobability">1</replace>
      <replace sel="./Projectile/StatusEffect/Explosion/Affliction[@identifier='explosiondamage']/@strength">60</replace>
      <del sel="./Projectile/StatusEffect/ParticleEmitter[@particle='shrapnel']" />
    </inherit>
  </Item>
  <!--爆破弹药箱-->
  <Item identifier="flakcannonammoboxexplosive">
    <inherit identifier="flakcannonammoboxexplosive">
      <doinherit />
      <replace sel="./Price/@baseprice">375</replace>
      <replace sel="./Price/Price[@minavailable='8']/@minavailable">4</replace>
      <del sel="./Deconstruct/Item" />
      <add sel="./Deconstruct">
        <Item identifier="iron" mincondition="0.95" />
        <Item identifier="carbon" mincondition="0.95" />
        <Item identifier="c4block" mincondition="0.95" />
        <Item identifier="c4block" mincondition="0.45" />
        <Item identifier="aluminium" />
      </add>
    </inherit>
  </Item>
</Override>